<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MobiDialogStyleCenter" parent="MobiDialogStyle">
        <item name="android:windowBackground">@color/mobi_white</item>
    </style>
<!--    <item name="android:windowBackground">@drawable/ch_dialog_app_layout_bg</item>-->

    <style name="MobiDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/mobi_transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="common_loading_dialog" parent="@style/MobiDialogStyle">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="MobiLoadingDialogWindowStyle">
        <item name="android:windowEnterAnimation">@anim/loading_modal_in</item>
        <item name="android:windowExitAnimation">@anim/loading_modal_out</item>
    </style>

</resources>